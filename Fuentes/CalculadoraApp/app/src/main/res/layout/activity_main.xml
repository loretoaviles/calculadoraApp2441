<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    
    <ImageView
        android:layout_marginTop="@dimen/marginBase"
        android:src="@drawable/calculator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tamanioImagen">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginBase2"
        android:orientation="horizontal">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:text="@string/n1Label"
            android:textSize="@dimen/tamanioLetra"></TextView>

        <EditText
            android:id="@+id/n1txt"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/tamanioLetra"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/marginBase2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="@string/n2Label"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="@dimen/tamanioLetra"
            android:layout_height="wrap_content">
        </TextView>

        <EditText
            android:id="@+id/n2Txt"
            android:inputType="number"
            android:layout_weight="1"
            android:textSize="@dimen/tamanioLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/marginBase2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:text="@string/sumarText"
            android:layout_weight="1"
            android:onClick="sumar"
            android:background="@color/colorSuma"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/tamanioLetra"
            android:layout_height="@dimen/tamnioBtn">

        </Button>
        <Button
            android:onClick="restar"
            android:layout_weight="1"
            android:textColor="@color/primary_light"
            android:background="@color/colorResta"
            android:layout_width="match_parent"
            android:text="-"
            android:textSize="@dimen/tamanioLetra"
            android:layout_height="@dimen/tamnioBtn">

        </Button>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/marginBase2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="match_parent"
        android:onClick="multiplicar"
        android:text="*"
        android:layout_weight="1"
        android:background="@color/colorMulti"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/tamanioLetra"
        android:layout_height="@dimen/tamnioBtn">

    </Button>
        <Button
            android:onClick="dividir"

            android:layout_width="match_parent"
            android:text="/"
            android:layout_weight="1"
            android:background="@color/colorDiv"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/tamanioLetra"
            android:layout_height="@dimen/tamnioBtn">

        </Button>

</LinearLayout>
</LinearLayout>